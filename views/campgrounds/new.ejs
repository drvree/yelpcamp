<% include ../partials/header %>

  <div class="row">
    <h1 style="text-align: center;">Create new Campground</h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Camp Name" name="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Image URL" name="image">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Decription" name="description">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Location" name="location">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-danger btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> Go Back</a>
    </div>
  </div>


<% include ../partials/footer %>
